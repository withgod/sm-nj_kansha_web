  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Nicknames</h3>
  </div>
  <div class="modal-body">
    <ul>
      <% @user.nicknames.each do|nick| %>
        <li><%= nick.nickname%></li>
    <% end %>
    </ul>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>
